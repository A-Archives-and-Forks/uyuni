<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.redhat.rhn.domain.org.Credentials"
         table="SUSECREDENTIALS">
    <id name="id" column="id" type="long">
      <generator class="sequence">
        <param name="sequence">suse_credentials_id_seq</param>
      </generator>
    </id>
    <property name="type" column="type" type="string" length="32" />
    <property name="hostname" column="hostname" type="string" length="64" />
    <property name="username" column="username" type="string" length="64" />
    <property name="encodedPassword" column="password" type="string" length="64" />
    <many-to-one name="org" column="org_id" class="com.redhat.rhn.domain.org.Org" />
    <property name="created" column="created" type="timestamp" insert="false" update="false" />
    <property name="modified" column="modified" type="timestamp" insert="false" update="false" />
  </class>
  <query name="Credentials.findByOrg">
    <![CDATA[from com.redhat.rhn.domain.org.Credentials as c
             where c.org = :org]]>
  </query>
</hibernate-mapping>
